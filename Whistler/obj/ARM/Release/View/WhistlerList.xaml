<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Whistler.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Model="using:Whistler.Model"
    xmlns:ViewModel="using:Whistler.ViewModel"
    xmlns:valueconverter="using:Whistler.Converter"
    x:Class="Whistler.View.WhistlerList"
    mc:Ignorable="d"
    DataContext="{Binding WhistlerListViewModel, Source={StaticResource Locator}}">

    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/SplashScreen.png"/>
    </Page.Background>

    <Page.Resources>
        <valueconverter:DoubleToTwoDigitsConverter x:Key="DateToTwoDigitsConverter" />
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Create Whistle" Icon="Account"/>
            <AppBarButton Label="Change to Provider" Icon="Add"/>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95">

            </RowDefinition>
            <RowDefinition Height="*">

            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#f5f5f5">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"></ColumnDefinition>
                <ColumnDefinition Width=".5*"></ColumnDefinition>
                <ColumnDefinition Width=".2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Whistler"
                       Foreground="Black"
                       Margin="10"
                       FontSize="20">
            </TextBlock>

            <Image Height="30"
                   Width="30"
                   Grid.Row="0"
                   Grid.Column="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,0,15,0"
                   Source="ms-appx:///Assets/bell.png">
            </Image>

            <Image Height="36"
                   Width="36"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Source="ms-appx:///Assets/mapIcon-1.png">
            </Image>

            <TextBlock x:ConnectionId='4' Grid.Row="1" 
                       Grid.Column="1" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                                                 
                       Foreground="Black" 
                       Margin="10" 
                       FontSize="15">
            </TextBlock>

            <Image Height="36"
                   Width="36"
                   Grid.Row="1"
                   Grid.Column="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Source="ms-appx:///Assets/mapIcon-2.png">
            </Image>

        </Grid>

        <ListView x:ConnectionId='1' Grid.Row="1" Background="White"
        ItemsSource="{Binding MatchingWhistles.matchingWhistles, Mode=TwoWay}" Margin="0,1,0,-1"                                             
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                        <Grid HorizontalAlignment="Stretch" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*"></ColumnDefinition>
                                <ColumnDefinition Width=".5*"></ColumnDefinition>
                                <ColumnDefinition Width=".2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,0,0" 
                               Height="42" 
                               Width="42" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               >
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding photo, TargetNullValue=http://cache1.pakwheels.com/ad_pictures/929/hyundai-santro-plus-3-2001-9297145.jpg}"></ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            

                            <StackPanel Grid.Row="1"
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">

                                <TextBlock Text="{Binding likes.Count}" 
                                    Foreground="Black" 
                                    Margin="0,0,2,0" 
                                    FontSize="20"
                                    VerticalAlignment="Center">
                                </TextBlock>

                                <Image Height="22" 
                                   Width="18" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Source="ms-appx:///Assets/likeIcon.png">
                                </Image>

                                <TextBlock Text="{Binding dislikes.Count}" 
                                   Foreground="Black" 
                                   Margin="0,0,2,0" 
                                   FontSize="20"
                                   VerticalAlignment="Center">
                                </TextBlock>

                                <Image Height="22" 
                                   Width="18" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,0"
                                   Source="ms-appx:///Assets/dislikeIcon.png">
                                </Image>

                            </StackPanel>

                            <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">

                                <StackPanel Orientation="Horizontal"
                                            Margin="0,5,0,0">

                                    <TextBlock FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding name}"
                                        VerticalAlignment="Bottom">

                                    </TextBlock>
                                    
                                    <TextBlock 
                                        x:Name="textBlockDistance"
                                        FontSize="15"
                                        Foreground="#006362"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom">
                                        <Run 
                                            Text="{Binding dis, 
                                            Converter={StaticResource DateToTwoDigitsConverter}}">
                                        </Run>
                                        <Run>
                                            Kms
                                        </Run>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,5,0,0"
                                        FontSize="15"
                                        Foreground="Black"
                                        Text="{Binding Whistles.category}">
                                </TextBlock>
                                <TextBlock Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,5,0,0"
                                        FontSize="15"
                                        Foreground="Black"
                                        Text="{Binding Whistles.comment}">
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="15,0,10,0">

                                <Image x:ConnectionId='2' x:Name="imageSendMessage"
                                       Tag="{Binding phone}"
                                       Height="23" 
                                       Width="24"
                                                                       
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Source="ms-appx:///Assets/messageIcon.png">
                                </Image>

                                <Image x:ConnectionId='3' x:Name="imageCall" 
                                       Tag="{Binding phone}"
                                                                
                                       Height="23" 
                                       Width="24" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"
                                       Source="ms-appx:///Assets/callIcon.png">
                                </Image>

                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>

